pipeline {
    agent any 
    tools {
	maven 'maven'
	jdk 'adoptioum'
    }
    stages {
        stage('Build') { 
            steps {
		    dir('event-app'){
			echo "Building" 
			sh '''
   				env | grep -e PATH -e JAVA_HOME
       				java -version
				mvn --version
				ls -la   
				mvn clean package
			'''
		    }
            }
        }
        stage('Test') { 
            steps {
                echo "Testing" 
                dir('event-app'){
			echo "Building" 
			sh '''
   				env | grep -e PATH -e JAVA_HOME
       				java -version
				mvn --version
				ls -la   
				mvn test
			'''
		    }"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Deploying" 
		//sh "mvnw spring-boot:build-image"
            }
        }
    }
}
