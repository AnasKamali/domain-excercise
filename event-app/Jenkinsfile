pipeline {
    agent any 
    tools {
	maven 'maven'
    }
    stages {
        stage('Build') { 
            steps {
                echo "Building" 
                sh "export MAVEN_HOME=/opt/maven"
		sh "export PATH=$PATH:$MAVEN_HOME/bin"
		sh "mvn --version"
		sh 'cd event-app'
		sh "mvn clean package"
            }
        }
        stage('Test') { 
            steps {
                echo "Testing" 
                sh "./mvnw test"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Deploying" 
		sh "mvnw spring-boot:build-image"
            }
        }
    }
}
